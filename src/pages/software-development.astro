---
import Header from "../components/Header.astro";
import Project from "../components/Project.astro";
import Sidebar from "../components/Sidebar.astro";
const projects = [
  {
    title: "Clinota",
    desc: [
      "Fullstack development of a patient management system for doctors and patients",
      "Designed and implemented UI, backend, and database architecture",
      "Contributed to RESTful API ",
      
    ],
    tech: ["React","React Native", "Next.js", "Node.js", "Postgres", "Render"]
  },
  {
    title: "fracture App",
    desc: [
      "doctors appointment App for fracture clinic",
      "Developed appointment and billing systems",
      "Resolved live production bugs and server issues"
    ],
    tech: ["Flutter", "Next.js", "vercel", "Docker", "googlesheets", "googledrive"]
  },
  
  {
    title: "Mua (Electronic Health Record System mockup)",
    desc: [
      "Contributed to Israel's largest telehealth platform for doctors and patients",
      "Developed appointment and billing systems",
      "Resolved live production bugs and server issues"
    ],
    tech: ["React", "Node.js", "Express.js", "MySQL", "AWS"]
  }
];
---

<!DOCTYPE html>
<html
>
  <Header title="Software Development | Michael Kachiwala" />
  <body>
    <div class="content">
        <Sidebar selectedItem="software-development" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block"
              ><img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Back</div></a
            >
          </div>
          <div class="content-container">
            <h1>Software Development</h1>
            <section class="items-container">
                <div class="resouce-items">
                    {projects.map(project => (
                      <Project 
                        title={project.title} 
                        desc={project.desc}
                        tech={project.tech}
                      />
                    ))}
                  </div>
            </section>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
